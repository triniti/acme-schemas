{
  "id": "http://acme-schemas.triniti.io/json-schema/acme/canvas/block/facebook-post-block/1-0-0.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "_schema": {
      "type": "string",
      "pattern": "^pbj:([a-z0-9-]+):([a-z0-9\\.-]+):([a-z0-9-]+)?:([a-z0-9-]+):([0-9]+-[0-9]+-[0-9]+)$",
      "default": "pbj:acme:canvas:block:facebook-post-block:1-0-0"
    },
    "etag": {
      "type": "string",
      "pattern": "^[\\w\\.:-]+$",
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "css_class": {
      "type": "string",
      "pattern": "^[\\w\\s-]+$",
      "description": "In rendering environments that support HTML the css_class can be appended to the dom elements' class attribute.",
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "href": {
      "type": "string",
      "pattern": "^(https?:\\/\\/)?([\\da-z\\.-]+)\\.([a-z\\.]{2,6})([\\/\\w \\.-]*)*\\/?$",
      "pbj": {
        "type": "string",
        "rule": "single",
        "format": "url"
      }
    },
    "show_text": {
      "type": "boolean",
      "pbj": {
        "type": "boolean",
        "rule": "single"
      }
    }
  },
  "required": [
    "_schema",
    "href"
  ],
  "additionalProperties": false
}
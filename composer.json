{
  "name": "triniti/acme-schemas",
  "homepage": "https://github.com/triniti/acme-schemas",
  "description": "Sample schemas for common triniti services",
  "type": "pbj-schema-store",
  "license": "Apache-2.0",
  "require": {
    "php": ">=7.1",
    "gdbots/schemas": "1.5.4",
    "triniti/schemas": "0.6.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.4",
    "gdbots/pbjc": "~0.3"
  },
  "autoload": {
    "files": [
      "build/php/src/pbj-schemas.php"
    ],
    "psr-0": {
      "": "build/php/src"
    }
  },
  "autoload-dev": {
    "files": [
      "pbj-schema-stores.php"
    ],
    "psr-0": {
      "": "build/php/tests"
    }
  },
  "scripts": {
    "pbjc": [
      "vendor/bin/pbjc",
      "git add .",
      "@test"
    ],
    "post-package-install": [
      "Gdbots\\Pbjc\\Composer\\ScriptHandler::writePbjSchemaStoresFile"
    ],
    "post-package-uninstall": [
      "Gdbots\\Pbjc\\Composer\\ScriptHandler::writePbjSchemaStoresFile"
    ],
    "post-package-update": [
      "Gdbots\\Pbjc\\Composer\\ScriptHandler::writePbjSchemaStoresFile"
    ],
    "test": [
      "vendor/bin/phpunit",
      "npm test"
    ]
  }
}

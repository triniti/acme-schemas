<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:acme:ovp:node:video:1-0-0">
    <fields>
      <field name="_id" type="identifier" required="true">
        <php-options>
          <imports>use Acme\Schemas\Ovp\VideoId;</imports>
          <class-name>VideoId::class</class-name>
          <default>function() { return VideoId::generate(); }</default>
        </php-options>
        <js-options>
          <imports>import VideoId from '@triniti/acme-schemas/acme/ovp/VideoId';</imports>
          <class-proto>VideoId</class-proto>
          <default>() => VideoId.generate()</default>
        </js-options>
      </field>
    </fields>

    <mixins>
      <curie-major>gdbots:ncr:mixin:node:v1</curie-major>
      <curie-major>triniti:ovp:mixin:video:v1</curie-major>
      <curie-major>gdbots:ncr:mixin:expirable:v1</curie-major>
      <curie-major>gdbots:ncr:mixin:indexed:v1</curie-major>
      <curie-major>gdbots:ncr:mixin:publishable:v1</curie-major>
      <curie-major>gdbots:ncr:mixin:sluggable:v1</curie-major>
      <curie-major>gdbots:common:mixin:taggable:v1</curie-major>
    </mixins>
  </schema>
</pbj-schema>

<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:acme:news:node:article:1-0-0">
    <fields>
      <field name="_id" type="identifier" required="true">
        <php-options>
          <imports>use Acme\Schemas\News\ArticleId;</imports>
          <class-name>ArticleId::class</class-name>
          <default>function() { return ArticleId::generate(); }</default>
        </php-options>
        <js-options>
          <imports>import ArticleId from '@triniti/acme-schemas/acme/news/ArticleId';</imports>
          <class-proto>ArticleId</class-proto>
          <default>() => ArticleId.generate()</default>
        </js-options>
      </field>
    </fields>

    <mixins>
      <curie-major>gdbots:ncr:mixin:node:v1</curie-major>
      <curie-major>triniti:news:mixin:article:v1</curie-major>
      <curie-major>triniti:news:mixin:headline-fragments:v1</curie-major>
      <curie-major>triniti:canvas:mixin:has-blocks:v1</curie-major>
      <curie-major>triniti:common:mixin:seo:v1</curie-major>
      <curie-major>gdbots:ncr:mixin:expirable:v1</curie-major>
      <curie-major>gdbots:ncr:mixin:indexed:v1</curie-major>
      <curie-major>gdbots:ncr:mixin:lockable:v1</curie-major>
      <curie-major>gdbots:ncr:mixin:publishable:v1</curie-major>
      <curie-major>gdbots:ncr:mixin:sluggable:v1</curie-major>
      <curie-major>gdbots:common:mixin:taggable:v1</curie-major>
    </mixins>
  </schema>
</pbj-schema>

<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:acme:curator:node:article-teaser:1-0-0">
    <fields>
      <field name="_id" type="identifier" required="true">
        <php-options>
          <imports>use Acme\Schemas\Curator\ArticleTeaserId;</imports>
          <class-name>ArticleTeaserId::class</class-name>
          <default>function() { return ArticleTeaserId::generate(); }</default>
        </php-options>
        <js-options>
          <imports>import ArticleTeaserId from '@triniti/acme-schemas/acme/curator/ArticleTeaserId';</imports>
          <class-proto>ArticleTeaserId</class-proto>
          <default>() => ArticleTeaserId.generate()</default>
        </js-options>
      </field>
    </fields>

    <mixins>
      <curie-major>gdbots:ncr:mixin:node:v1</curie-major>
      <curie-major>triniti:curator:mixin:article-teaser:v1</curie-major>
      <curie-major>triniti:people:mixin:has-people:v1</curie-major>
      <curie-major>gdbots:ncr:mixin:expirable:v1</curie-major>
      <curie-major>gdbots:ncr:mixin:indexed:v1</curie-major>
      <curie-major>gdbots:ncr:mixin:publishable:v1</curie-major>
      <curie-major>gdbots:common:mixin:taggable:v1</curie-major>
    </mixins>
  </schema>
</pbj-schema>

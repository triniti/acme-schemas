<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:acme:notify:node:email-notification:1-0-0">
    <fields>
      <field name="distro_video_url" type="string" format="url"/>
      <field name="distro_video_embed" type="text"/>
      <field name="distro_photo_url" type="string" format="url"/>
      <field name="distro_document_url" type="string" format="url"/>
      <field name="distro_date" type="string"/>
    </fields>
    
    <mixins>
      <curie-major>gdbots:ncr:mixin:node:v1</curie-major>
      <curie-major>triniti:notify:mixin:notification:v1</curie-major>
      <curie-major>triniti:notify:mixin:email-notification:v1</curie-major>
      <curie-major>gdbots:ncr:mixin:indexed:v1</curie-major>
    </mixins>
  </schema>
</pbj-schema>

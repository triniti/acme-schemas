{
  "id": "http://acme-schemas.triniti.io/json-schema/acme/canvas/block/youtube-playlist-block/1-0-0.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "_schema": {
      "type": "string",
      "pattern": "^pbj:([a-z0-9-]+):([a-z0-9\\.-]+):([a-z0-9-]+)?:([a-z0-9-]+):([0-9]+-[0-9]+-[0-9]+)$",
      "default": "pbj:acme:canvas:block:youtube-playlist-block:1-0-0"
    },
    "etag": {
      "type": "string",
      "pattern": "^[\\w\\.:-]+$",
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "css_class": {
      "type": "string",
      "pattern": "^[\\w\\s-]+$",
      "description": "In rendering environments that support HTML the css_class can be appended to the dom elements' class attribute.",
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "updated_date": {
      "type": "string",
      "format": "date-time",
      "description": "Used to visually represent an update that occurred on this block that is NOT when this block was literally last modified.",
      "pbj": {
        "type": "date-time",
        "rule": "single"
      }
    },
    "playlist_id": {
      "type": "string",
      "pattern": "^[\\w-]+$",
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "video_id": {
      "type": "string",
      "pattern": "^[\\w-]+$",
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "autoplay": {
      "type": "boolean",
      "pbj": {
        "type": "boolean",
        "rule": "single"
      }
    },
    "poster_image_ref": {
      "type": "string",
      "pattern": "^[\\w\\/\\.:-]+$",
      "description": "A reference to an image asset to use as the poster that will override what is provided by youtube.",
      "pbj": {
        "type": "identifier",
        "rule": "single"
      }
    }
  },
  "required": [
    "_schema",
    "playlist_id",
    "video_id"
  ],
  "additionalProperties": false
}
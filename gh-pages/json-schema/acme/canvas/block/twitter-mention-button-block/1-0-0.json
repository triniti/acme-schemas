{
  "id": "http://acme-schemas.triniti.io/json-schema/acme/canvas/block/twitter-mention-button-block/1-0-0.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "_schema": {
      "type": "string",
      "pattern": "^pbj:([a-z0-9-]+):([a-z0-9\\.-]+):([a-z0-9-]+)?:([a-z0-9-]+):([0-9]+-[0-9]+-[0-9]+)$",
      "default": "pbj:acme:canvas:block:twitter-mention-button-block:1-0-0"
    },
    "etag": {
      "type": "string",
      "pattern": "^[\\w\\.:-]+$",
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "css_class": {
      "type": "string",
      "pattern": "^[\\w\\s-]+$",
      "description": "In rendering environments that support HTML the css_class can be appended to the dom elements' class attribute.",
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "updated_date": {
      "type": "string",
      "format": "date-time",
      "description": "Used to visually represent an update that occurred on this block that is NOT when this block was literally last modified.",
      "pbj": {
        "type": "date-time",
        "rule": "single"
      }
    },
    "screen_name": {
      "type": "string",
      "pattern": "^[\\w\\.]+$",
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "prefill_text": {
      "type": "string",
      "minLength": 0,
      "maxLength": 5000,
      "pbj": {
        "type": "text",
        "rule": "single"
      }
    },
    "recommended_accounts": {
      "type": "array",
      "items": [
        {
          "type": "string",
          "pattern": "^[\\w\\.]+$"
        }
      ],
      "uniqueItems": true,
      "additionalProperties": false,
      "pbj": {
        "type": "string",
        "rule": "set"
      }
    }
  },
  "required": [
    "_schema",
    "screen_name"
  ],
  "additionalProperties": false
}